{
  "name": "migo",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "dev:server": "docker compose up -d --wait postgres livekit && pnpm --filter @migo/server dev",
    "dev:client": "pnpm --filter @migo/client dev",
    "build:server": "pnpm --filter @migo/server build",
    "build:client": "pnpm --filter @migo/client build",
    "dev:client2": "cross-env MIGO_INSTANCE=2 pnpm --filter @migo/client dev",
    "db:generate": "pnpm --filter @migo/server db:generate",
    "db:migrate": "pnpm --filter @migo/server db:migrate",
    "prod:server": "docker compose -f docker-compose.prod.yml --env-file .env.prod up -d",
    "prod:server:down": "docker compose -f docker-compose.prod.yml --env-file .env.prod down",
    "build:media-engine": "pnpm --filter @migo/media-engine build",
    "ship": "git checkout main && git merge dev && git push origin main && git checkout dev"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "cross-env": "^10.1.0"
  }
}
