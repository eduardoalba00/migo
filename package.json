{
  "name": "migo",
  "private": true,
  "license": "AGPL-3.0-only",
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "dev": "node scripts/start-dev.mjs",
    "dev:client": "cross-env MIGO_INSTANCE=1 pnpm --filter @migo/client dev",
    "dev:client2": "cross-env MIGO_INSTANCE=2 pnpm --filter @migo/client dev",
    "prod:setup": "node scripts/setup.mjs",
    "prod:start": "node scripts/start-prod.mjs",
    "prod:stop": "node scripts/stop-prod.mjs",
    "build:server": "pnpm --filter @migo/server build",
    "build:client": "pnpm --filter @migo/client build",
    "db:generate": "pnpm --filter @migo/server db:generate",
    "db:migrate": "pnpm --filter @migo/server db:migrate",
    "ship": "git checkout main && git merge dev && git push origin main && git checkout dev",
    "prod:db": "node scripts/prod-db.mjs",
    "db:dump": "node scripts/prod-db-transfer.mjs dump",
    "db:restore": "node scripts/prod-db-transfer.mjs restore"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "cross-env": "^10.1.0"
  }
}
